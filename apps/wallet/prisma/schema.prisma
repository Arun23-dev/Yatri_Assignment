generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Wallet {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId String   @unique  // This should match the Customer ID from Hub
  balance    Float    @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  transactions Transaction[]
}

model Transaction {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  walletId    String     @db.ObjectId
  customerId  String     // This should match the Customer ID from Hub
  amount      Float
  type        String     // credit, debit
  description String
  reference   String?    // For linking to charging sessions or other external references
  chargingSessionId String? // Link to Hub's charging session
  timestamp   DateTime   @default(now())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  wallet      Wallet     @relation(fields: [walletId], references: [id])
}


