{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/hub",
  "sourceRoot": "apps/hub/src",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/hub/tsconfig.app.json"
  },
  "projects": {
    "hub": {
      "type": "application",
      "root": "apps/hub",
      "entryFile": "main",
      "sourceRoot": "apps/hub/src",
      "compilerOptions": {
        "tsConfigPath": "apps/hub/tsconfig.app.json"
      }
    },
    "wallet": {
      "type": "application",
      "root": "apps/wallet",
      "entryFile": "main",
      "sourceRoot": "apps/wallet/src",
      "compilerOptions": {
        "tsConfigPath": "apps/wallet/tsconfig.app.json"
      }
    }
  }
}
